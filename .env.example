# Environment
ENV=development  # development, staging, or production

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# ChromaDB Configuration
CHROMA_DB_PATH=./data/chroma

# Model Configuration
MODEL_NAME=gpt-4o-mini
EMBEDDING_MODEL=text-embedding-ada-002

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000 

# AWS Configuration (only needed for local development, Parameter Store is used in production)
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_S3_BUCKET_NAME=your_bucket_name
AWS_REGION=us-east-2
CHAT_LOG_STORAGE_STRATEGY=session-end  # or "periodic" or "real-time"
PERIODIC_STORAGE_INTERVAL=300  # seconds, if using periodic strategy

# S3 Data Handling Configuration
S3_DATA_BUCKET=conversational-resume  # S3 bucket for storing ChromaDB data
USE_S3_DATA=true  # Set to true to enable S3 data handling in production
AUTO_UPLOAD_DATA=true  # Set to true to automatically upload generated ChromaDB data to S3